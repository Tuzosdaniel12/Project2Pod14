 {{> jumbo/jumbo-block }} 

  <div class="container">
    <div class="row justify-content-md-center custom-mx">
      <div class="col-md-9 col-lg-6 background">
        <h2>Login</h2>
        <form class="login signup" action="/" method="POST">
          <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="email-input" name="email" placeholder="Email">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="password-input" name="password"  placeholder="Password">
          </div>
          <div style="display: none" id="alert" class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span> <span class="msg">{{message.error}}</span>
          </div>
          <button type="submit" value="submit" class="btn btn-default">Login</button>
        </form>
        <br />
        <p>Or sign up <a href="/signup">HERE</a>.</p>
        <a href="/forgot-password"><small>Forgot Password</small></a><br>
        <a href="/activate"><small>Activate Account</small></a><br>
        <a href="/resend-activation"><small>Resend Activate code </small></a>
      </div>
    </div>
  </div>

  {{> modal/modal-block}}