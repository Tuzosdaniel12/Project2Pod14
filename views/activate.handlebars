 {{> jumbo/jumbo-block }} 

  <div class="container">
    <div class="row row justify-content-md-center custom-mx">
      <div class="col-md-6 background">
        <h2>{{action}} Account</h2>
        <form class="{{action}}" >
          <div class="form-group">
            {{#if bool}}
            <input type="code" class="form-control" id="code-input" data-target="{{target}}" name="code" placeholder="Activation Code">
            <a href="/resend-activation"><small>Resend Activate code </small></a>
            {{else}}
            <input type="email" class="form-control" id="email-input" data-target="{{target}}" name="email" placeholder="Send Email">
            {{/if}}
          </div>
          <button type="submit" value="submit" id="{{action}}" class="btn btn-default">{{action}}</button>
        </form>
        <br />
        <p>Or sign up <a href="/signup">HERE</a>.</p>
      </div>
    </div>
  </div>

  {{> modal/modal-block}}
  