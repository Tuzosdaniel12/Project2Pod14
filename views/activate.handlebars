        <h2>Activate Account</h2>
        <form class="activate" >
          <div class="form-group">
            <input type="code" class="form-control" id="code-input" name="code" placeholder="Activation Code">
          </div>
          <p>{{message}}</p>
          <button type="submit" value="submit" class="btn btn-default">Activate</button>
